@model RoyalTravel.ViewModels.Booking.ConfrimResViewModel
@{
    ViewData["Title"] = "Confirm";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>


<div class="alert alert-success" role="alert">
    <h4 class="alert-heading text-center">Thank you for making a reservation for <span class="font-weight-bold">@Model.HotelName</span>!</h4>
    <h4 class="text-center">Your reservation has been confirmed!</h4>
    <h4 class="alert-heading text-center">Your confirmation number is: <span class="font-weight-bold">@Model.ConfirmationNumber</span></h4>
    <hr>
    <p class="mb-0 text-center">Charges my apply for local amenities like safe warranties and telephone access. Modifications to the nummber of nights can change the rate! Check with our front desk for information!</p>
    <p class="mb-0 text-center">You can click on the <span class="font-weight-bold">Details</span> button below for additional information.</p>
</div>

<button data-toggle="collapse" data-target="#details" class="btn btn-primary btn-lg btn-block">Details</button>

<div id="details" class="collapse">
    <div class="row font-weight-bold">
        <div class="card col-sm" style="width: 18rem;">
            <ul class="list-group list-group-flush text-center">
                <li class="list-group-item">Hotel: @Model.HotelName</li>
                <li class="list-group-item">Check In Time: @Model.CheckInTime h</li>
                <li class="list-group-item">Check Out Time: @Model.CheckOutTime h</li>
            </ul>
        </div>
        <div class="card col-sm" style="width: 18rem;">
            <ul class="list-group list-group-flush text-center">
                <li class="list-group-item">Check In: @Model.CheckIn</li>
                <li class="list-group-item">Check Out: @Model.CheckOut</li>
                <li class="list-group-item">Nights: @Model.Nights</li>
            </ul>
        </div>
        <div class="card col-sm" style="width: 18rem;">
            <ul class="list-group list-group-flush text-center">
                <li class="list-group-item">Adults: @Model.Adults</li>
                <li class="list-group-item">Children: @Model.Children</li>
                <li class="list-group-item">Booking Number: @Model.ConfirmationNumber</li>
            </ul>
        </div>

    </div>
</div>

