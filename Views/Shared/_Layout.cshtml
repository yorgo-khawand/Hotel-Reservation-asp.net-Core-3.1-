            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-crown logo"></i>Royal Travel</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home nav-icon"></i><span class="ml-1">Home</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-btn" asp-controller="Booking" asp-action="Index">
                                <i class="fas fa-calendar-plus nav-icon"></i><span class="ml-1">Book</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-btn" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-file-alt nav-icon"></i><span class="ml-1">Privacy</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
